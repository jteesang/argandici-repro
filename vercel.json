{
  "version": 2,
  "builds": [
    {
      "src": "api/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/**"]
      }
    },
    {
      "src": "ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/ui/browser"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/src/main.ts"
    },
    {
      "source": "/:path*",
      "destination": "/ui/server.ts"
    }
  ]
}
